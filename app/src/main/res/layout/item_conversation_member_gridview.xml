<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <io.rong.imkit.veiw.AsyncImageView
        android:id="@android:id/icon"
        android:layout_width="@dimen/px_to_dip_112"
        android:layout_height="@dimen/px_to_dip_112"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/px_to_dip_15"
        android:layout_marginTop="@dimen/px_to_dip_15"
        android:contentDescription="@string/content_description"
        app:defDrawable="@drawable/default_portrait" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_to_dip_20"
        android:text="@string/default_name"
        android:textColor="#252525"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/px_to_dip_30"></TextView>

    <ImageView
        android:id="@android:id/icon1"
        android:layout_width="@dimen/px_to_dip_40"
        android:layout_height="@dimen/px_to_dip_40"
        android:contentDescription="@string/content_description"
        android:src="@drawable/mebmer_delete" />

</RelativeLayout>